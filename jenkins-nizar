pipeline {
    agent any 
    environment {
        NEW_VERSION = '1.3.0'
        SERVER_CREDENTIALS = credentials('server-credentials')
    }
    stages {
        stage('Build') { 
            steps {
                echo 'building stage succesfuly'
                echo "the building version is ${NEW_VERSION}"
            }
        }
        stage('Test') { 
            steps {
                echo 'Testing stage done..'
            }
        }
        stage('Deploy') { 
            steps {
                echo 'Deploying stage done ...'
                echo "deploying with ${SEVER_CREDENTIALS}"
                sh "${SEVER_CREDENTIALS}"
            }
        }
    }
}
